{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "outDir": "dist"
  },
  "include": [
    "features/**/*.ts",
    "support/**/*.ts",
    "pages/**/*.ts",
    "data/**/*.ts"
  ]
}
